<?xml version="1.0" encoding="UTF-8"?>
<!--
  This header declares a modern Servlet 4.0 specification, which is part of
  the Jakarta EE 8 profile. This is the correct configuration for Tomcat 10
  and ensures modern features like Expression Language (EL) are enabled by default.
-->
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <!-- Optional: You can set a display name for your project -->
    <display-name>VO-Project</display-name>

    <!--
      This section tells the server which file to show by default when a user
      visits the root directory of your application (e.g., /VO-Project/).
    -->
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>

</web-app>
